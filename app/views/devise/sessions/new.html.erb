<div class="page-header">
  <h1>Inloggen</h1>
</div>
<% if false %>
  <div class="social">
    <%= link_to "Log in met je facebook account", "/auth/facebook", :class => "social_buttons fb" %>
    <%= link_to "Log in met je twitter account", "/auth/twitter", :class => "social_buttons twt" %>
    <br/>
    <%= link_to "Wat is dit?","#", :class => "whats_this", :rel => 'popover', 'data-content' => "Als je een facebook of twitter account hebt, kan je hiermee inloggen. Dit biedt extra mogelijkheden zoals het vergelijken met vrienden. Je moet je account wel eerst verbinden via 'Mijn profiel'. Hiervoor moet je even op de normale manier inloggen.", 'data-original-title' => 'Log in met facebook/twitter' %>
  </div>
<% end %>
<h3 class="more_bottom_margin">Log in met je mega.tom.bike account</h3>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
      <%= f.label :remember_me %>
      <div class="input">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Inloggen", :class => 'btn primary' %>
    <%= f.submit "Maak leeg", :type => :reset, :class => 'btn'%> 
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
