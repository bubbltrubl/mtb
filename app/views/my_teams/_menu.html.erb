<li class="dropdown<%= ' active' if params[:controller] == 'my_teams' %>">
  <%= link_to "Mijn ploegen", "#", :class => "dropdown-toggle" %>
  <ul class="dropdown-menu">
  <% unless @my_teams.empty? %>
    <% @my_teams.each do |team| %>
      <li><%= link_to team.name, "/my_teams/#{team.id}" %></li>
    <% end %>
    <% if @can_subscribe %>
      <li class="divider"></li>
    <% end %>
  <% end %>
  <% if @can_subscribe %>
    <li><%= link_to 'Maak een ploeg aan', new_team_path %></li>
  <% end %>
  </ul>
</li>
