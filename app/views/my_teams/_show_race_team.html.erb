<h6 class="left_floater"><%= @race.name %></h6>
<% if @editable_races.include?(@race) %>
  <% if @team.has_race_team_for(@race) %>
    <%= link_to "Wijzig deze wedstrijdploeg", edit_race_team_path(@team.get_race_team_for(@race)), :class => 'btn info small thin right_floater align_with_header' %>
  <% else %>
    <%= link_to "CreÃ«er een wedstrijdploeg voor deze wedstrijd", "/race_teams/new/#{@team.id}/race/#{@race.id}/rdtmt", :class => 'btn success small thin right_floater align_with_header' %>
  <% end %>
<% else %>
  <span class="label important right_floater align_with_header">Niet aanpasbaar</span>
<% end %>
<table class="condensed-table">
  <thead>
    <th>Renner</th>
    <th>Ploeg</th>
    <th></th>
  </thead>
  <tbody>
    <% @team.riders.each do |rider| %>
      <tr>
        <td class="rider_name"><span><%= rider.name %></span></td>
        <td><span><%= rider.cycling_team.short_name %></span></td>
        <td>
          <% if @race_team.riders.include?(rider) %>
            <span class="label success">in selectie</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 
