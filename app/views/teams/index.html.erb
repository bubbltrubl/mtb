<div class="page-header">
  <h1>Klassement</h1>
</div>
<div class="row">
  <div class="span8">
    <table class="bordered-table zebra-striped">
      <thead>
        <th>#</th>
        <th>Ploeg</th>
        <th>Ploegleider</th>
        <th>Punten</th>
      </thead>
      <tbody>
        <% @teams.each_with_index do |team,key| %>
          <tr>
            <td><%= key + 1 %></td>
            <td><%= link_to team.name, team, :remote => true %></span></td>
            <td><%= link_to team.user.username, team, :remote => true %></td>
            <td><%= link_to team.points, team, :remote => true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="team-info" class="span8">
    <%= render :partial => "teams/show_team" %>
  </div>
</div>
