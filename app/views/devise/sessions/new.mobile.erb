<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div data-role="fieldcontain">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div data-role="fieldcontain">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div data-role="fieldcontain">
      <%= f.label :remember_me %>
      <%= f.select :remember_me, options_for_select({"Nee" => "false","Ja"=> "true"}, "false"),{}, {'data-role' => 'slider' } %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Inloggen" %>
  </div>
<% end %>
