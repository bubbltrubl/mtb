<div class="page-header">
  <h1>Kalender</h1>
</div>
<br/>
<table class="zebra-striped">
  <thead>
    <tr>
      <th>Naam</th>
      <th>Datum</th>
      <th>Categorie</th>
      <th>Vorige winnaar</th>
    </tr>
  </thead>
  <tbody>
  <% @races.each do |race| %>
    <tr>
      <td><%= race.name %></td>
      <td><%= l race.date.to_date, :format => :short %><%= " - #{l(race.end_date.to_date, :format => :short)}" if race.is_tour %></td>
      <td><%= race.category.name %></td>
      <td><%= race.previous_winner %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% if (current_user and current_user.admin?) %>
  <br />
  <%= link_to 'New Race', new_race_path %>
<% end %>
